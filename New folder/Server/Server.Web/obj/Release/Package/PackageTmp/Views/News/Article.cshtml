                <ul class="category-list list-unstyled">
                    @foreach (var recentArticle in Model.RecentArticle)
                    {
                        <li>
                            <a href="@Url.Action("Article", "News", new {id = recentArticle.Id})">@recentArticle.Title</a>
                            <br>
                            @{
                                var createdAt = DateTime.Parse(recentArticle.CreatedAt, new CultureInfo("vi-VN"));
                            }
