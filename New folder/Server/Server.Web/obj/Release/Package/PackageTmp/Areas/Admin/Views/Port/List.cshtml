@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Web.Areas.Admin.Models.Ports.PortsListModel
@{
    var defaultGridPageSize = 20;
    var gridPageSizes = "10,20,50,100,500";
}

@Html.AntiForgeryToken()
<div class="content-header clearfix">
    <h1 class="pull-left">
        Danh sách cảng
    </h1>
    <div class="pull-right">
        <a href="@Url.Action("Create")" class="btn bg-blue">
            <i class="fa fa-plus-square"></i>
            Thêm
        </a>
    </div>
</div>

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            @*hide the entire search block if no elements are displayed*@
            <div class="panel panel-default panel-search">
                <div class="panel-body">
                    @*hide the entire search block if no elements are displayed*@
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Code:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.PortCode)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Name:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.PortName)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Position:</label>
                                </div>
                                <div class="col-md-8">
                                    <input id="@Html.FieldIdFor(model => model.NationalityId)"
                                           name="@Html.NameFor(model => model.NationalityId)"
                                           value="@Html.ValueFor(model => model.NationalityId)" />
                                    <script>
                                        $(document).ready(function() {
                                            $("#@Html.FieldIdFor(model => model.NationalityId)").kendoDropDownList({
                                                filter: "contains",
                                                dataTextField: "Name",
                                                dataValueField: "Value",
                                                optionLabel: "Tất cả",
                                                minLength: 1,
                                                dataSource: {
                                                    type: "json",
                                                    serverFiltering: true,
                                                    transport: {
                                                        read: {
                                                            url: "/api/LookupApi/GetCountries",
                                                            dataType: "json",
                                                            data: filterCountries
                                                        }
                                                    }
                                                }
                                            });

                                            function filterCountries() {
                                                var data = {
                                                    @*Name: $("#@Html.FieldIdFor(model => model.ShipperId)")
                                                        .data("kendoComboBox").input.val()*@
                                                    Name: ""
                                                };
                                                addAntiForgeryToken(data);
                                                return data;
                                            }
                                        });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.NationalityId)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Mode: </label>
                                </div>
                                <div class="col-md-8">
                                    <input id="@Html.FieldIdFor(model => model.ModeId)"
                                           name="@Html.NameFor(model => model.ModeId)"
                                           value="@Html.ValueFor(model => model.ModeId)" />
                                    <script>
                                        $(document).ready(function() {
                                            $("#@Html.FieldIdFor(model => model.ModeId)").kendoDropDownList({
                                                filter: "contains",
                                                dataTextField: "Name",
                                                dataValueField: "Value",
                                                optionLabel: "Tất cả",
                                                minLength: 1,
                                                dataSource: {
                                                    type: "json",
                                                    serverFiltering: true,
                                                    transport: {
                                                        read: {
                                                            url: "/api/LookupApi/GetModes",
                                                            dataType: "json",
                                                            data: filterModes
                                                        }
                                                    }
                                                }
                                            });

                                            function filterModes() {
                                                var data = {
                                                    @*Name: $("#@Html.FieldIdFor(model => model.ShipperId)")
                                                        .data("kendoComboBox").input.val()*@
                                                    Name: ""
                                                };
                                                addAntiForgeryToken(data);
                                                return data;
                                            }
                                        });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.ModeId)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4"></div>
                                <div class="col-md-8">
                                    <button type="button" id="button-search" class="btn btn-primary">
                                        <i class="fa fa-search"></i>
                                        Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    <div id="main-grid"></div>

                    <script>
                        $(document).ready(function() {
                            $("#main-grid").kendoGrid({
                                dataSource: {
                                    type: "json",
                                    transport: {
                                        read: {
                                            url: "@Html.Raw(Url.Action("List", "Port"))",
                                            type: "POST",
                                            dataType: "json",
                                            data: additionalData
                                        }
                                    },
                                    schema: {
                                        data: "Data",
                                        total: "Total",
                                        errors: "Errors"
                                    },
                                    error: function(e) {
                                        display_kendoui_grid_error(e);
                                        // Cancel the changes
                                        this.cancelChanges();
                                    },
                                    pageSize: @(defaultGridPageSize),
                                    serverPaging: true,
                                    serverFiltering: true,
                                    serverSorting: true
                                },
                                pageable: {
                                    refresh: true,
                                    pageSizes: [@(gridPageSizes)],
                                    messages: {
                                        itemsPerPage: "Số hàng trên trang",
                                        empty: "Không có port",
                                        display: "{0} - {1} của {2} port"
                                    }
                                },
                                editable: {
                                    confirmation: "Delete",
                                    mode: "inline"
                                },
                                scrollable: false,
                                columns: [
                                    {
                                        field: "PortCode",
                                        title: "Port Code",
                                        headerAttributes: { style: "text-align:left" },
                                    },{
                                        field: "PortName",
                                        title: "Port Name",
                                        headerAttributes: { style: "text-align:left" },
                                    }, {
                                        field: "Id",
                                        title: " ",
                                        width: 100,
                                        headerAttributes: { style: "text-align:center" },
                                        attributes: { style: "text-align:center" },
                                        template: '<a class="btn btn-default" href="Edit/#=Id#"><i class="fa fa-pencil"></i>Chi tiết</a>'
                                    }
                                ]
                            });
                        });
                    </script>

                    <script type="text/javascript">
                        $(document).ready(function() {
                            //search button
                            $('#button-search').click(function() {
                                //search
                                var grid = $('#main-grid').data('kendoGrid');
                                grid.dataSource.page(1); //new search. Set page size to 1
                                //grid.dataSource.read(); we already loaded the grid above using "page" function
                                return false;
                            });
                        });

                        function additionalData() {
                            var data = {
                                PortName: $('#@Html.FieldIdFor(model => model.PortName)').val(),
                                PortCode: $('#@Html.FieldIdFor(model => model.PortCode)').val(),
                                NationalityId: $('#@Html.FieldIdFor(model => model.NationalityId)').val(),
                                ModeId: $('#@Html.FieldIdFor(model => model.ModeId)').val()
                            };
                            addAntiForgeryToken(data);
                            return data;
                        }
                        $("".concat("#@Html.FieldIdFor(model => model.PortName),",
                            "#@Html.FieldIdFor(model => model.PortCode),",
                            "#@Html.FieldIdFor(model => model.NationalityId)",
                            "#@Html.FieldIdFor(model => model.ModeId)"
                        )).keydown(function (event) {
                            if (event.keyCode === 13) {
                                $("#button-search").click();
                                return false;
                            }
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>

