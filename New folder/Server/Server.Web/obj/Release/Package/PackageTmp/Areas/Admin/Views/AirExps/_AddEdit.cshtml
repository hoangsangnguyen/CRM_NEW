                            <td>
                                @Html.DropDownListFor(model => model.DestinationId, new SelectList(Model.PortItems, "Value", "Text"),
                                              new { @Id = "DestinationId", @class = "form-control select-style-1 DrpPort" })
                            </td>
                            <td><a data-request-url="@Url.Action("OpenModal", "Port")" id="create-destinationport">Add</a></td>
                        </tr>
                        </tr>
                    </table>
                    @*commodity*@
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <div class="out-input">
                            <label>Commodity</label>
                            @Html.DropDownListFor(model => model.CommodityId, new SelectList(Model.CommodityItems, "Value", "Text"), new { @class = "form-control select-style-1" })

