                                @Html.DropDownListFor(model => model.OpicId, new SelectList(Model.ContactItems, "Value", "Text"), new { @Id = "OpicId", @class = "form-control select-style-1 DrpContact" })
                            </td>
                            <td><a data-request-url="@Url.Action("OpenModal", "Contact")" id="create-opic">Add</a></td>
                        </tr>
                        </tr>

                    </table>
                    @*airlines*@
                    <table class="col-sm-12 col-md-6 col-lg-4">
                        <tr class="out-input">
                            <th>Airlines</th>
                        <tr>
                            <td>
                                @Html.DropDownListFor(model => model.CarrierId, new SelectList(Model.CarrierItems, "Value", "Text"), new { @Id = "AirlineId", @class = "form-control select-style-1 DrpCarrier" })
                            </td>
                            <td><a data-request-url="@Url.Action("OpenModal", "Carrier")" id="create-airlines">Add</a></td>
                        </tr>
                        </tr>
                    </table>
                    @*created*@
                    <div class="col-sm-12 col-md-6 col-lg-4">
                        <div class="out-input">
                            <label>Create</label>
                            <div class="out-datapick">
                                <input type="text" name="@Html.NameFor(model => model.Created)" value="@Model.Created" class="form-control mydatepicker">
                                <span class="input-group-addon"><i class="mdi mdi-calendar-clock"></i></span>
                                @*<input id="datetimepickerr" title="datetimepicker" style="width: 100%;"/>*@
                                @*<script>
                                        $(document).ready(function () {
