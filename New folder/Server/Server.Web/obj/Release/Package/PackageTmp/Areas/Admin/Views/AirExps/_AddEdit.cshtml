                    </div>
                    @*origin*@
                    <table class="col-sm-12 col-md-6 col-lg-4">
                        <tr class="out-input">
                            <th>Origin</th>
                        <tr>
                            <td>
                                @Html.DropDownListFor(model => model.OriginPortId, new SelectList(Model.PortItems, "Value", "Text"),
                                                        new { @Id = "OriginPortId", @class = "form-control select-style-1 DrpPort" })
                            </td>
                            <td><a data-request-url="@Url.Action("OpenModal", "Port")" id="create-originport">Add</a></td>
                        </tr>
                        </tr>
                    </table>
                    @*destination*@
                    <table class="col-sm-12 col-md-6 col-lg-4">
                        <tr class="out-input">
                            <th>Destination</th>
