@using System.Globalization
@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Services.MainServices.CRM.Carrier.Model.CarrierModel
@{
    <style>
        .k-combobox .k-input {
            height: 27.5px !important
        }
    </style>
}
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.Code)

@{
    Layout = null;
}
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        @*Code*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Code :</label>
                                </div>
                                <div class="col-md-8">
                                    <label class="control-label">@Model.Code</label>
                                </div>
                            </div>
                        </div>
                        @*Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Name:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.Name)
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                            </div>
                        </div>
                        @*English Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">English Name:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.FullEnglishName)
                                    @Html.ValidationMessageFor(m => m.FullEnglishName)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Country*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Country:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.CountryId, new SelectList(Model.CountryItems, "Value", "Text"),
                                                            new { @Id = @Html.FieldIdFor(m => m.CountryId), @class = "form-control select-style-1" })
                                    @Html.ValidationMessageFor(model => model.CountryId)
                                </div>
                            </div>
                        </div>
                        @*Cell*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Cell :</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.Cell)
                                    @Html.ValidationMessageFor(m => m.Cell)
                                </div>
                            </div>
                        </div>
                        @*Contact*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Contact:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.Contact)
                                    @Html.ValidationMessageFor(m => m.Contact)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*modal*@
        <div id="myModal" class="modal  fade " data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div id="myModalContent"></div>
                </div>
            </div>
        </div>
    </div>
</div>


