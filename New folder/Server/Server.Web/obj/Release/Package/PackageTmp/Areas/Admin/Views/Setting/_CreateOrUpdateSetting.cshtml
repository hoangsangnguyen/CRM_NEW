@using Falcon.Web.Mvc.HtmlExtensions
@model  Vino.Server.Services.MainServices.System.Setting.Models.SettingModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div id="Employee-edit" class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                @Html.RenderBootstrapTabHeader("tab-info", new LocalizedString("Thông tin"), true)
            </ul>
            <div class="tab-content">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Tên</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.FalconEditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Giá trị</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.FalconEditorFor(model => model.Value)
                                    @Html.ValidationMessageFor(model => model.Value)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


