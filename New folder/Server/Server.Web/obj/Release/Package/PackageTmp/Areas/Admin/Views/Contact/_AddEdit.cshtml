@using System.Globalization
@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Services.MainServices.CRM.Contact.Models.CrmContactModel
@{
    <style>
        .k-combobox .k-input {
            height: 27.5px !important
        }
    </style>
}
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.ContactId)

@{
    Layout = null;
}
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        @*Contact ID*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Contact ID:</label>
                                </div>
                                <div class="col-md-8">
                                    <label class="control-label">@Model.ContactId</label>
                                </div>
                            </div>
                        </div>
                        @*First Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">First Name:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.FirstName)
                                    @Html.ValidationMessageFor(m => m.FirstName)
                                </div>
                            </div>
                        </div>
                        @*Last Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Last Name:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.LastName)
                                    @Html.ValidationMessageFor(m => m.LastName)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*English Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">English Name:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.EnglishName)
                                    @Html.ValidationMessageFor(m => m.EnglishName)
                                </div>
                            </div>
                        </div>
                        @*Position*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Position:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.PositionId, new SelectList(Model.PositionItems, "Value", "Text"),
                                                       new { @Id = @Html.FieldIdFor(m => m.PositionId), @class = "form-control select-style-1" })
                                    @Html.ValidationMessageFor(model => model.PositionId)
                                </div>
                            </div>
                        </div>
                        @*Home Address*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Home Address:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.HomeAddress)
                                    @Html.ValidationMessageFor(m => m.HomeAddress)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Cell Phone*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Cell Phone:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.CellPhone)
                                    @Html.ValidationMessageFor(m => m.CellPhone)
                                </div>
                            </div>
                        </div>
                        @*Home Phone*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Home Phone:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.HomePhone)
                                    @Html.ValidationMessageFor(m => m.HomePhone)
                                </div>
                            </div>
                        </div>
                        @*Email Address*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Email Address:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.Email)
                                    @Html.ValidationMessageFor(m => m.Email)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Company Ext*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Company Ext:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.CompanyExt)
                                    @Html.ValidationMessageFor(m => m.CompanyExt)
                                </div>
                            </div>
                        </div>
                         @*Signature*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Signature:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.Signature)
                                    @Html.ValidationMessageFor(m => m.Signature)
                                </div>
                            </div>
                        </div>
                        @*Department*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Department:</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.DropDownListFor(model => model.DepartmentId, new SelectList(Model.DepartmentItems, "Value", "Text"),
                                        new { @Id = @Html.FieldIdFor(m => m.DepartmentId), @class = "form-control select-style-1" })
                                    @Html.ValidationMessageFor(model => model.DepartmentId)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @*modal*@
        <div id="myModal" class="modal  fade " data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div id="myModalContent"></div>
                </div>
            </div>
        </div>
    </div>
</div>


