@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Services.MainServices.Message.Models.EmailAccountModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Email</label>
                        </div>
                        <div class="col-md-9">
                            @Html.FalconEditorFor(model => model.Email, required: true)
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Tên hiển thị</label>
                        </div>
                        <div class="col-md-9">
                            @Html.FalconEditorFor(model => model.DisplayName, required: true)
                            @Html.ValidationMessageFor(model => model.DisplayName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Host</label>
                        </div>
                        <div class="col-md-9">
                            @Html.FalconEditorFor(model => model.Host)
                            @Html.ValidationMessageFor(model => model.Host)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Port</label>
                        </div>
                        <div class="col-md-9">
                            @Html.FalconEditorFor(model => model.Port)
                            @Html.ValidationMessageFor(model => model.Port)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Username</label>
                        </div>
                        <div class="col-md-9">
                            @Html.FalconEditorFor(model => model.Username)
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Password</label>
                        </div>
                        <div class="col-md-9">
                            <div class="input-group">
                                @Html.FalconEditorFor(model => model.Password)
                                <div class="input-group-btn">
                                    @if (Model.Id > 0)
                                    {
                                        <button type="submit" name="ChangePassword" class="btn btn-info" value="true">
                                            Đỗi mật khẩu
                                        </button>
                                    }
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Enable Ssl</label>
                        </div>
                        <div class="col-md-9">
                            @Html.FalconEditorFor(model => model.EnableSsl)
                            @Html.ValidationMessageFor(model => model.EnableSsl)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Use Default Credentials</label>
                        </div>
                        <div class="col-md-9">
                            @Html.FalconEditorFor(model => model.UseDefaultCredentials)
                            @Html.ValidationMessageFor(model => model.UseDefaultCredentials)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
