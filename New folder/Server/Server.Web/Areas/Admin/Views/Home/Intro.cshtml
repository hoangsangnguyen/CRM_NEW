@using System.Web.Mvc
@using Falcon.Web.Mvc.HtmlExtensions
@using Vino.Shared.Constants.Common
@model Vino.Server.Services.MainServices.CRM.Topic.Model.TopicModel

@{
    ViewData["Title"] = "Intro";
}
<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="form-group" style="text-align: center">
                <img src="@Model.ImagePath" style="width: 100%; height: 75vh; object-fit: fill; object-position: center bottom">
            </div>
            
            <div class="form-group">
                <strong class="col-md-12" style="text-align: center;">
                    @Html.FalconDisplayFor(model => model.Name)
                </strong>

                <div class="col-md-12" style="text-align: center">
                    @Html.FalconDisplayFor(model => model.Address)
                </div>

                <div class="col-md-12" style="text-align: center">
                    @Html.FalconDisplayFor(model => model.Phone)
                </div>
            </div>
            
        </div>
    </div>
</div>