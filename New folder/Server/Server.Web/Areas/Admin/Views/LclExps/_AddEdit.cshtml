<script>
        function openContactPopup(viewId) {

            var url = '/Admin/Contact/ContactAddPopup?viewId=' +
                viewId +
                '&btnId=btnRefreshContactItems&formId=LclExp-edit-form';
            OpenWindow(url, 800, 800, true);
                    }

        function openCarrierPopup(viewId) {
            var url = '/Admin/Carrier/CarrierAddPopup?viewId=' +
                viewId +
                '&btnId=btnRefreshCarrierItems&formId=LclExp-edit-form';
            OpenWindow(url, 800, 800, true);
        }

        function openPortPopup(viewId) {

            var url = '/Admin/Port/PortAddPopup?viewId=' +
                viewId +
                '&btnId=btnRefreshPortItems&formId=LclExp-edit-form';
            OpenWindow(url, 800, 800, true);
        }

        function openLookupPopup(viewId, type) {

            var url = '/Admin/Lookup/LookupAddPopup?viewId=' +
                viewId + "&type=" + type +
                '&btnId=btnRefreshLookupItems&formId=LclExp-edit-form';
            OpenWindow(url, 800, 800, true);
        }

        $(document).ready(function() {

            $('#btnRefreshContactItems')[0].addEventListener("contact",
                function(event) {
                    //refresh combobox
                    $("#@Html.FieldIdFor(m => m.OpIcId)").data("kendoComboBox").dataSource.read();
                    $("#" + event.detail.viewId).data("kendoComboBox").value(event.detail.valueId);

                    return false;
                });

            $('#btnRefreshCarrierItems')[0].addEventListener("carrier",
                function(event) {
                    //refresh combobox
                    $("#@Html.FieldIdFor(m => m.AgentId)").data("kendoComboBox").dataSource.read();
                    $("#@Html.FieldIdFor(m => m.CoLoaderId)").data("kendoComboBox").dataSource.read();
                    $("#" + event.detail.viewId).data("kendoComboBox").value(event.detail.valueId);

                    return false;
                });

            $('#btnRefreshLookupItems')[0].addEventListener("lookup",
                function(event) {
                    //refresh combobox
                    $("#" + event.detail.viewId).data("kendoComboBox").dataSource.read();
                    $("#" + event.detail.viewId).data("kendoComboBox").value(event.detail.valueId);

                    return false;
                });

            $('#btnRefreshPortItems')[0].addEventListener("port",
                function(event) {
                    //refresh combobox
                    console.log(event);
                    $("#@Html.FieldIdFor(m => m.PolId)").data("kendoComboBox").dataSource.read();
                    $("#@Html.FieldIdFor(m => m.PodId)").data("kendoComboBox").dataSource.read();

                    $("#" + event.detail.viewId).data("kendoComboBox").value(event.detail.valueId);

                    return false;
                });
        });
</script>

