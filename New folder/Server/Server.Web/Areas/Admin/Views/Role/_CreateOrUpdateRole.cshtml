@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Services.MainServices.Auth.Models.RoleModel

@Html.ValidationSummary(true)


<div class="content">
    <div class="form-horizontal">
        <div id="Employee-edit" class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                @Html.RenderBootstrapTabHeader("tab-info", new LocalizedString("Thông tin"), true)
            </ul>
            <div class="tab-content">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Tên vai trò</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.FalconEditorFor(model => model.Display)
                                    @Html.ValidationMessageFor(model => model.Display)
                                </div>
                            </div>
                      
                                <div class="form-group">
                                    <div class="col-md-3">
                                        <label>Tên hệ thống</label>
                                    </div>
                                    <div class="col-md-9">

                                        <input class="form-control text-box" value="@Model.SystemName" name="@Html.NameFor(model=> model.SystemName)" id="@Html.IdFor(model => model.SystemName)" @if (ViewBag.Edit) { <text>disabled="disabled"</text>}/>


                                    @Html.ValidationMessageFor(model => model.SystemName)
                                    </div>
                                </div>
                        
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label>Kích hoạt</label>
                                </div>
                                <div class="col-md-9">
                                    @Html.CheckBoxFor(model => model.Active)
                                    @Html.ValidationMessageFor(model => model.Active)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

