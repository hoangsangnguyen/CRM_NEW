@model Vino.Server.Web.Models.About.AboutUsModel
@section templatePage
{
    template-page
}
<section class="scandium">
    <div class="scandium-container">
        <div class="hero-container"></div>

        <div class="content-container">
            @if (Model.AboutHeader != null && Model.AboutHeader.Published)
            {
                <h1 class="elixir-h3 elixir-heading elixir-text-color-1 scandium-heading">@Model.AboutHeader.Title</h1>
                @Html.Raw(Model.AboutHeader.Body)
            }
        </div>
    </div>
</section>
<section class="titanium">
    <div class="titanium-container">
        <h2 class="elixir-h3 elixir-heading elixir-text-color-1 titanium-heading">Not a company, a community of local fresh food growers</h2>

        <div class="grid">
            <div class="grid__item huge--one-half">

                <div class="text-tile elixir-text elixir-text-color">

                    @if (Model.Block1 != null && Model.Block1.Published)
                    {
                        @Html.Raw(Model.Block1.Body)
                    }

                </div>

                <div class="">
                    <img src="~/Content/images/about/singularity_university_fresh_basil.jpg" alt="First batch of produce from the Click &amp; Grow Wall Farm at Singularity University">
                    <div class="titanium-overlay-light">Singularity University</div>
                </div>

            </div>


            <div class="grid__item large--one-half hidden-xs">
                <img src="~/Content/images/about/user_urbanfarmerly.jpg" alt="@("@urbanfarmerly") | Assembling the Click &amp; Grow Smart Garden 3">
                <div class="titanium-overlay">@("@urbanfarmerly")</div>
            </div>


            <div class="grid__item medium--one-half large--one-quarter huge--one-quarter">
                <img src="~/Content/images/about/user_benjaminuyedau_2.jpg">
                <div class="titanium-overlay">@("@benjaminuyedau")</div>
            </div>

            <div class="grid__item  medium--one-half large--one-quarter huge--one-quarter">
                <img src="~/Content/images/about/user_zavinaaa.jpg" alt="@("@zavinaaa") | Holding a mini tomato grown in a Click &amp; Grow indoor garden">
                <div class="titanium-overlay-light">@("@zavinaaa")</div>
            </div>


            <div class="grid__item medium--one-half large--one-quarter huge--one-quarter">
                <img src="~/Content/images/about/user_ralphandmolly.jpg" alt="@("@ralphandmolly") | Smart Garden 3 growing beautiful basil">
                <div class="titanium-overlay">@("@ralphandmolly")</div>
            </div>

            <div class="grid__item medium--one-half large--one-quarter huge--one-quarter">
                <img src="~/Content/images/about/user_adaezenoelle.jpg" alt="@("@adaezenoelle") | Green-lidded Smart Herb Garden in a pastel colored kitchen">
                <div class="titanium-overlay">@("@adaezenoelle")</div>
            </div>

            <div class="grid__item huge--one-half">
                <div class="text-tile-2">
                    <div class="text-tile-cell elixir-text">
                        @if (Model.Block2 != null && Model.Block2.Published)
                        {
                            @Html.Raw(Model.Block2.Body)
                        }
                        @*<p class="mar-top-30">
                            <a class="titanium-tile-link elixir-heading elixir-text-color" href="/pages/technology" onclick="ga('send', 'event', 'about-us', 'clicked CTA', 'about us - clicked learn about technology CTA', 0);"><b>Learn more about our technology</b><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                        </p>*@
                    </div>

                </div>
            </div>

            <div class="grid__item medium--one-half large--one-half huge--one-quarter">
                <img src="~/Content/images/about/user_jaygoo82.jpg" alt="@("@jaygoo82") | Close-up of mini tomatoes growing in a Click &amp; Grow indoor garden">
                <div class="titanium-overlay-light">@("@jaygoo82")</div>
            </div>

            <div class="grid__item medium--one-half large--one-half huge--one-quarter">
                <img src="~/Content/images/about/user_benjaminuyeda.jpg" alt="@("@benjaminuyedau") | Modified Click &amp; Grow Wall Farm vertical indoor garden">
                <div class="titanium-overlay">@("@benjaminuyedau")</div>
            </div>

        </div>

    </div>
</section>

<section class="vanadium">
    <div class="vanadium-container">
        <h2 class="elixir-h3 elixir-heading vanadium-heading">The three pillars of Click &amp; Grow</h2>

        <ul class="grid">
            <li class="grid__item large--one-third vanadium-item">
                <div class="grid__item__inner"><div class="vanadium-item-bg-holder vanadium-bg-1"></div></div>
                <div class="vanadium-item-overlay">
                    <div class="vanadium-item-overlay-inner">
                        <div class="vanadium-item-overlay-cell">
                            <div class="vanadium-item-overlay-content">
                                Encouraging and enabling local food production
                            </div>
                        </div>
                    </div>
                </div>
            </li>

            <li class="grid__item large--one-third vanadium-item">
                <div class="grid__item__inner"><div class="vanadium-item-bg-holder vanadium-bg-2"></div></div>
                <div class="vanadium-item-overlay">
                    <div class="vanadium-item-overlay-inner">
                        <div class="vanadium-item-overlay-cell">
                            <div class="vanadium-item-overlay-content">
                                Inspiring conservation of nature through educational products
                            </div>
                        </div>
                    </div>
                </div>

            </li>

            <li class="grid__item large--one-third vanadium-item">
                <div class="grid__item__inner"><div class="vanadium-item-bg-holder vanadium-bg-3"></div></div>
                <div class="vanadium-item-overlay">
                    <div class="vanadium-item-overlay-inner">
                        <div class="vanadium-item-overlay-cell">
                            <div class="vanadium-item-overlay-content">
                                Promoting clean &amp; organic food consumption
                            </div>
                        </div>
                    </div>
                </div>

            </li>

        </ul>

    </div>
</section>
