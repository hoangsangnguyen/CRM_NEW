@using System.Globalization
@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Services.MainServices.CRM.Customer.Models.CrmCustomerModel
@{
    <style>
        .k-combobox .k-input {
            height: 27.5px !important
        }
    </style>
}
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.CustomerId)

@{
    Layout = null;
}

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        @*CustomerId*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Customer Id:</label>
                                </div>
                                <div class="col-md-7">
                                    <label class="control-label">@Model.CustomerId</label>
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        @*Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Name:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        @*English Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">English Name:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.FullEngishName)
                                    @Html.ValidationMessageFor(model => model.FullEngishName)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*VietNamese Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">VietNamese Name:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.FullVietNamName)
                                    @Html.ValidationMessageFor(model => model.FullVietNamName)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Address*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Address :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Address)
                                    @Html.ValidationMessageFor(model => model.Address)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Contact*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Contact:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.ContactId, new SelectList(Model.ContactItems, "Value", "Text"),
                                                       new { @Id = @Html.FieldIdFor(m => m.ContactId), @class = "form-control select-style-1 DrpContact" })
                                    @Html.ValidationMessageFor(model => model.ContactId)
                                </div>
                                <div class="col-md-1">
                                    <a data-request-url="@Url.Action("OpenModal", "Contact")" id="create-contact">Add</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Workphone*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Work phone :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.WorkPhone)
                                    @Html.ValidationMessageFor(model => model.WorkPhone)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Fax No*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Fax No :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.FaxNo)
                                    @Html.ValidationMessageFor(model => model.FaxNo)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Location*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Location:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.LocationId, new SelectList(Model.LocationItems, "Value", "Text"),
                                        new { @Id = @Html.FieldIdFor(m => m.LocationId), @class = "form-control select-style-1" })
                                    @Html.ValidationMessageFor(model => model.LocationId)
                                </div>
                                <div class="col-md-1">
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Home phone*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Home phone :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.HomePhone)
                                    @Html.ValidationMessageFor(model => model.HomePhone)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Tax code*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Tax code:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Taxcode)
                                    @Html.ValidationMessageFor(model => model.Taxcode)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Category*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Category:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.CategoriesItems, "Value", "Text"),
                              new { @Id = @Html.FieldIdFor(m => m.CategoryId), @class = "form-control select-style-1" })
                                    @Html.ValidationMessageFor(model => model.CategoryId)
                                </div>
                                <div class="col-md-1">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Website*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Website :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Website)
                                    @Html.ValidationMessageFor(model => model.Website)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        @*Email*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Email :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Email)
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        @*modal*@
        <div id="myModal" class="modal  fade " data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div id="myModalContent"></div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/Areas/Admin/Content/js/customer_addedit.js"></script>
</div>




