@using Falcon.Web.Mvc.HtmlExtensions
@using Vino.Shared.Constants.Common
@model Vino.Server.Services.MainServices.CRM.Topic.Model.TopicModel

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)

    <div class="content">
        <div class="form-horizontal">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-md-3">
                                <label class="control-label" for="@Html.FieldIdFor(m => m.Type)">Loại topic</label>
                            </div>
                            <div class="col-md-9">
                                <input id="@Html.FieldIdFor(m => m.Type)"
                                       style="width: 100%" 
                                       name="@Html.NameFor(m => m.Type)"
                                       @if (Model.Id > 0) { <text> disabled="" </text> } />
                                <script>
                                        $(document).ready(function () {
                                            $("#@Html.FieldIdFor(m => m.Type)").kendoDropDownList({
                                                dataTextField: "Name",
                                                dataValueField: "Value",
                                                dataSource: {
                                                    transport: {
                                                        read: {
                                                            dataType: "json",
                                                            url: "/api/lookupapi/GetLookupsByType?type=" + '@LookupTypes.TopicType',
                                                        }
                                                    }
                                                },
                                            });
                                        });
                                </script>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label class="control-label">Tên hiển thị</label>
                            </div>
                            <div class="col-md-9">
                                @Html.FalconEditorFor(model => model.Name)
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label class="control-label">Số điện thoại</label>
                            </div>
                            <div class="col-md-9">
                                @Html.FalconEditorFor(model => model.Phone)
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3">
                                <label class="control-label">Địa chỉ</label>
                            </div>
                            <div class="col-md-9">
                                @Html.FalconTextAreaFor(model => model.Address)
                                @Html.ValidationMessageFor(model => model.Address)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                <label class="control-label">Hình ảnh</label>
                            </div>
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.ImageId, "PictureNullable")
                                @Html.ValidationMessageFor(model => model.ImageId)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>