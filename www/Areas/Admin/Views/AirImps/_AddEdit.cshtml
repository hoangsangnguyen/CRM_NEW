@using System.Globalization
@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Services.MainServices.CRM.AirImp.Models.AirImpModel
@{
    <style>
        .k-combobox .k-input {
            height: 27.5px !important
        }
    </style>
}
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.JobId)

@{
    Layout = null;
}

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                <div class="row">
                    @*JobId*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">JobId:</label>
                            </div>
                            <div class="col-md-8">
                                <label class="control-label">@Model.JobId</label>
                            </div>
                        </div>
                    </div>
                    @*OPIC*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">O.P IC:</label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.OpIcId, new SelectList(Model.ContactItems, "Value", "Text"),
                                    new {@Id = @Html.FieldIdFor(m => m.OpIcId), @class = "form-control select-style-1 DrpContact"})
                                @Html.ValidationMessageFor(model => model.OpIcId)
                            </div>
                            <div class="col-md-1">
                                <a data-request-url="@Url.Action("OpenModal", "Contact")" id="create-opic">Add</a>
                            </div>
                        </div>
                    </div>
                    @*Airlines*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">AirLines:</label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.AirlineId, new SelectList(Model.CarrierItems, "Value", "Text"),
                                    new {@Id = @Html.FieldIdFor(m => m.AirlineId), @class = "form-control select-style-1 DrpCarrier"})
                                @Html.ValidationMessageFor(model => model.AirlineId)
                            </div>
                            <div class="col-md-1">
                                <a data-request-url="@Url.Action("OpenModal", "Carrier")" id="create-airline">Add</a>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="row" style="margin-top: 10px">
                        @*Created*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Created:</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="datetime" id="@Html.FieldIdFor(model => model.Created)"
                                           name="@Html.FieldIdFor(model => model.Created)" value="@Model.Created"
                                           style="width: 100%" />
                                    <script>
                                    $(document).ready(function() {
                                        $("#@Html.FieldIdFor(model => model.Created)").kendoDatePicker({
                                            culture: "vi-VN",
                                            format: "dd/MM/yyyy"
                                        });
                                        $("#@Html.FieldIdFor(model => model.Created)")
                                            .prop("readonly", "readonly");
                                    });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.Created)
                                </div>
                            </div>
                        </div>

                        @*Service*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Service :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Service)
                                    @Html.ValidationMessageFor(model => model.Service)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Agent*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Agents:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.AgentId, new SelectList(Model.CarrierItems, "Value", "Text"),
                                        new {@Id = @Html.FieldIdFor(m => m.AgentId), @class = "form-control select-style-1 DrpCarrier"})
                                    @Html.ValidationMessageFor(model => model.AgentId)
                                </div>
                                <div class="col-md-1">
                                    <a data-request-url="@Url.Action("OpenModal", "Carrier")" id="create-agent">Add</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <div class="row" style="margin-top: 10px">
                    @*Eta*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">Eta:</label>
                            </div>
                            <div class="col-md-8">
                                <input type="datetime" id="@Html.FieldIdFor(model => model.Eta)"
                                       name="@Html.FieldIdFor(model => model.Eta)" value="@Model.Eta"
                                       style="width: 100%"/>
                                <script>
                                    $(document).ready(function() {
                                        $("#@Html.FieldIdFor(model => model.Eta)").kendoDatePicker({
                                            culture: "vi-VN",
                                            format: "dd/MM/yyyy"
                                        });
                                        $("#@Html.FieldIdFor(model => model.Eta)")
                                            .prop("readonly", "readonly");
                                    });
                                </script>
                                @Html.ValidationMessageFor(model => model.Eta)
                            </div>
                        </div>
                    </div>
                    @*AOL*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">AOL:</label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.AolId, new SelectList(Model.PortItems, "Value", "Text"),
                                    new {@Id = @Html.FieldIdFor(m => m.AolId), @class = "form-control select-style-1 DrpPort"})
                                @Html.ValidationMessageFor(model => model.AolId)
                            </div>
                            <div class="col-md-1">
                                <a data-request-url="@Url.Action("OpenModal", "Port")" id="create-AolPort">Add</a>
                            </div>
                        </div>
                    </div>
                    @*AOD*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">A.O.D:</label>
                            </div>
                            <div class="col-md-7">
                                @Html.DropDownListFor(model => model.AodId, new SelectList(Model.PortItems, "Value", "Text"),
                                    new {@Id = @Html.FieldIdFor(m => m.AodId), @class = "form-control select-style-1 DrpPort"})
                                @Html.ValidationMessageFor(model => model.AodId)
                            </div>
                            <div class="col-md-1">
                                <a data-request-url="@Url.Action("OpenModal", "Port")" id="create-AodPort">Add</a>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="row" style="margin-top: 10px">
                        @*Mawb No*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Mawb No :</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.MawbNumber)
                                    @Html.ValidationMessageFor(model => model.MawbNumber)
                                </div>
                            </div>
                        </div>

                        @*Type of bill*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Type of bill:</label>
                                </div>
                                <div class="col-md-7">
                                    <input id="@Html.FieldIdFor(model => model.TypeOfBillId)"
                                           name="@Html.FieldNameFor(model => model.TypeOfBillId)"
                                           value="@Html.ValueFor(model => model.TypeOfBillId)" />
                                    <script>
                                    $(document).ready(function() {
                                        $("#@Html.FieldIdFor(model => model.TypeOfBillId)").kendoDropDownList({
                                            dataTextField: "Name",
                                            dataValueField: "Value",
                                            dataSource: {
                                                transport: {
                                                    read: {
                                                        dataType: "json",
                                                        url: "/api/lookupapi/GetTypeOfBill"
                                                    }
                                                }
                                            }
                                        });
                                    });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.TypeOfBillId)

                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Delivery*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Delivery:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.DeliveryId, new SelectList(Model.PortItems, "Value", "Text"),
                         new { @Id = @Html.FieldIdFor(m => m.DeliveryId), @class = "form-control select-style-1 DrpPort" })
                                    @Html.ValidationMessageFor(model => model.DeliveryId)
                                </div>
                                <div class="col-md-1">
                                    <a data-request-url="@Url.Action("OpenModal", "Port")" id="create-delivery">Add</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Flight date*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Flight date:</label>
                                </div>
                                <div class="col-md-8">
                                    <input type="datetime" id="@Html.FieldIdFor(model => model.FLyDate)"
                                           name="@Html.FieldIdFor(model => model.FLyDate)" value="@Model.FLyDate"
                                           style="width: 100%" />
                                    <script>
                                    $(document).ready(function() {
                                        $("#@Html.FieldIdFor(model => model.FLyDate)").kendoDatePicker({
                                            culture: "vi-VN",
                                            format: "dd/MM/yyyy"
                                        });
                                        $("#@Html.FieldIdFor(model => model.FLyDate)")
                                            .prop("readonly", "readonly");
                                    });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.FLyDate)
                                </div>
                            </div>
                        </div>
                        @*Flight No*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Flight No:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.FlightNumber)
                                    @Html.ValidationMessageFor(model => model.FlightNumber)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        
                        @*Routing*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Routing:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Routing)
                                    @Html.ValidationMessageFor(model => model.Routing)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                       
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Commodity*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Commodity:</label>
                                </div>
                                <div class="col-md-8">
                                    <input id="@Html.FieldIdFor(model => model.CommodityId)"
                                           name="@Html.FieldNameFor(model => model.CommodityId)"
                                           value="@Html.ValueFor(model => model.CommodityId)" />
                                    <script>
                                    $(document).ready(function() {
                                        $("#@Html.FieldIdFor(model => model.CommodityId)").kendoDropDownList({
                                            dataTextField: "Name",
                                            dataValueField: "Value",
                                            dataSource: {
                                                transport: {
                                                    read: {
                                                        dataType: "json",
                                                        url: "/api/lookupapi/GetCommodities"
                                                    }
                                                }
                                            }
                                        });
                                    });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.CommodityId)

                                </div>
                            </div>
                        </div>
                        @*Quantity*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Quantity :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Quantity)
                                    @Html.ValidationMessageFor(model => model.Quantity)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        
                        @*Unit*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Unit:</label>
                                </div>
                                <div class="col-md-7">
                                    <input id="@Html.FieldIdFor(model => model.UnitId)"
                                           name="@Html.FieldNameFor(model => model.UnitId)"
                                           value="@Html.ValueFor(model => model.UnitId)" />
                                    <script>
                                        $(document).ready(function() {
                                            $("#@Html.FieldIdFor(model => model.UnitId)").kendoDropDownList({
                                                dataTextField: "Name",
                                                dataValueField: "Value",
                                                dataSource: {
                                                    transport: {
                                                        read: {
                                                            dataType: "json",
                                                            url: "/api/lookupapi/GetUnitTypes"
                                                        }
                                                    }
                                                }
                                            });
                                        });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.UnitId)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*SCN*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">SCN :</label>
                                </div>
                                <div class="col-md-8">
                                    @Html.FalconEditorFor(m => m.Scn)
                                    @Html.ValidationMessageFor(model => model.Scn)
                                </div>
                            </div>
                        </div>
                       
                        @*Shipments*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Shipments:</label>
                                </div>
                                <div class="col-md-7">
                                    <input id="@Html.FieldIdFor(model => model.ShipmentId)"
                                           name="@Html.FieldNameFor(model => model.ShipmentId)"
                                           value="@Html.ValueFor(model => model.ShipmentId)" />
                                    <script>
                                        $(document).ready(function() {
                                            $("#@Html.FieldIdFor(model => model.ShipmentId)").kendoDropDownList({
                                                dataTextField: "Name",
                                                dataValueField: "Value",
                                                dataSource: {
                                                    transport: {
                                                        read: {
                                                            dataType: "json",
                                                            url: "/api/lookupapi/GetShipments"
                                                        }
                                                    }
                                                }
                                            });
                                        });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.ShipmentId)
                                </div>

                                <div class="col-md-1"></div>
                            </div>
                        </div>
                       
                        @*Finish*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Finish:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.CheckBoxFor(m => m.IsFinish)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                    </div>

                <div class="row" style="margin-top: 10px">
                    @*GW*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">GW :</label>
                            </div>
                            <div class="col-md-8">
                                @Html.FalconEditorFor(m => m.Gw)
                                @Html.ValidationMessageFor(model => model.Quantity)
                            </div>
                        </div>
                    </div>
                    @*CW*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">CW :</label>
                            </div>
                            <div class="col-md-7">
                                @Html.FalconEditorFor(m => m.Cw)
                                @Html.ValidationMessageFor(model => model.Quantity)
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                    </div>
                    
                    @*Notes*@
                    <div class="col-md-4">
                        <div class="form-group form-custom">
                            <div class="col-md-4">
                                <label class="control-label">Notes:</label>
                            </div>
                            <div class="col-md-7">
                                @Html.FalconTextAreaFor(m => m.Notes)
                            </div>
                            <div class="col-md-1"></div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
        @*modal*@
        <div id="myModal" class="modal  fade " data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div id="myModalContent"></div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="/Areas/Admin/Content/js/airimps_addedit.js"></script>
</div>




