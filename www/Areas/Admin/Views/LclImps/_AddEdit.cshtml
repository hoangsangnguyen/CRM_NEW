                                                dataSource: {
                                                    transport: {
                                                        read: {
                                                            dataType: "json",
                                                            url: "/api/lookupapi/GetUnitTypes"
                                                        }
                                                    }
                                                }
                                            });
                                        });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.UnitId)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        
                        @*Service*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
