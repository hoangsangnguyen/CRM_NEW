                                        $(document).ready(function() {
                                            $("#@Html.FieldIdFor(model => model.Etd)").kendoDatePicker({
                                                culture: "vi-VN",
                                                format: "dd/MM/yyyy"
                                            });
                                            $("#@Html.FieldIdFor(model => model.Etd)")
                                                .prop("readonly", "readonly");
