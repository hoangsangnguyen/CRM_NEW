                                    @Html.ValidationMessageFor(model => model.Service)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*GW*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">GW :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.Gw)
                                    @Html.ValidationMessageFor(model => model.Gw)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        
                        @*CBM*@
                        <div class="col-md-4">
