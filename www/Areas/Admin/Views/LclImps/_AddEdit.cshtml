@using System.Globalization
@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Services.MainServices.CRM.LclImp.Models.LclImpModel
@{
    <style>
        .k-combobox .k-input {
            height: 27.5px !important
        }
    </style>
}
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.JobId)

@{
    Layout = null;
}

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        @*JobId*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">JobId:</label>
                                </div>
                                <div class="col-md-7">
                                    <label class="control-label">@Model.JobId</label>
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        @*OPIC*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">O.P IC:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.OpIcId, new SelectList(Model.ContactItems, "Value", "Text"),
                                             new { @Id = @Html.FieldIdFor(m => m.OpIcId), @class = "form-control select-style-1 DrpContact" })
                                    @Html.ValidationMessageFor(model => model.OpIcId)
                                </div>
                                <div class="col-md-1">
                                    <a data-request-url="@Url.Action("OpenModal", "Contact")" id="create-opic">Add</a>
                                </div>
                            </div>
                        </div>
                        @*S.Lines*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">S.Lines:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.SlinesId, new SelectList(Model.CarrierItems, "Value", "Text"),
                                             new { @Id = @Html.FieldIdFor(m => m.SlinesId), @class = "form-control select-style-1 DrpCarrier" })
                                    @Html.ValidationMessageFor(model => model.SlinesId)
                                </div>
                                <div class="col-md-1">
                                    <a data-request-url="@Url.Action("OpenModal", "Carrier")" id="create-sline">Add</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Created*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Created:</label>
                                </div>
                                <div class="col-md-7">
                                    <input type="datetime" id="@Html.FieldIdFor(model => model.Created)"
                                           name="@Html.FieldIdFor(model => model.Created)" value="@Model.Created"
                                           style="width: 100%" />
                                    <script>
                                        $(document).ready(function() {
                                            $("#@Html.FieldIdFor(model => model.Created)").kendoDatePicker({
                                                culture: "vi-VN",
                                                format: "dd/MM/yyyy"
                                            });
                                            $("#@Html.FieldIdFor(model => model.Created)")
                                                .prop("readonly", "readonly");
                                        });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.Created)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*S.C Name*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">S.C Name :</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.FalconEditorFor(m => m.ScName)
                                    @Html.ValidationMessageFor(model => model.ScName)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>

                        @*Agent*@
                        <div class="col-md-4">
                            <div class="form-group form-custom">
                                <div class="col-md-4">
                                    <label class="control-label">Agents:</label>
                                </div>
                                <div class="col-md-7">
                                    @Html.DropDownListFor(model => model.AgentId, new SelectList(Model.CarrierItems, "Value", "Text"),
                                             new { @Id = @Html.FieldIdFor(m => m.AgentId), @class = "form-control select-style-1 DrpCarrier" })
                                    @Html.ValidationMessageFor(model => model.AgentId)
                                </div>
                                <div class="col-md-1">
                                    <a data-request-url="@Url.Action("OpenModal", "Carrier")" id="create-agent">Add</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top: 10px">
                        @*Eta*@
                        <div class="col-md-4">
