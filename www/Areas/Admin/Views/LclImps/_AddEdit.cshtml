                                    <script>
                                        $(document).ready(function() {
                                            $("#@Html.FieldIdFor(model => model.Eta)").kendoDatePicker({
                                                culture: "vi-VN",
                                                format: "dd/MM/yyyy"
                                            });
                                            $("#@Html.FieldIdFor(model => model.Eta)")
                                                .prop("readonly", "readonly");
                                        });
                                    </script>
                                    @Html.ValidationMessageFor(model => model.Eta)
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        
                        @*M-B/L No*@
