@using Falcon.Web.Mvc.HtmlExtensions
@model Vino.Server.Web.Areas.Admin.Models.Message.SendEmailTestModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @Model.Email
        </h1>
        <div class="pull-right">
            <a class="btn bg-blue" href="@Html.Raw(Url.Action("Edit", "EmailAccount", new {id = Model.Id}))"><i class="fa fa-chevron-left" aria-hidden="true"></i> Quay Lại</a>
        </div>
    </div>
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <div class="content">
            <div class="form-horizontal">
                <div class="panel-group">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Gửi email test:
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <div class="col-md-3">
                                    <label class="control-label">Email nhận:</label>
                                </div>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        @Html.FalconEditorFor(model => model.SendMailTo)
                                        <div class="input-group-btn">
                                            <button type="submit" name="sendtestemail" class="btn btn-info">
                                                Gửi
                                            </button>
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(model => model.SendMailTo)
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
